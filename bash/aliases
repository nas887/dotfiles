alias bu='bundle update'
alias code='cd ~/code'
alias d='cd ~/dotfiles'
alias gad='git add .'
alias gc='git commit'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gst='git status'
alias gcl='git clone'
alias gcm='git commit -m'
